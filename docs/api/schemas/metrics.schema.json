{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MetricsIngestRequest",
  "type": "object",
  "required": [
    "client",
    "events"
  ],
  "properties": {
    "client": {
      "type": "object",
      "required": [
        "client_id"
      ],
      "properties": {
        "client_id": {
          "type": "string"
        },
        "app_version": {
          "type": "string"
        },
        "tz": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "events": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "ts"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "ts": {
            "type": "string",
            "format": "date-time"
          },
          "round_id": {
            "type": "string"
          },
          "question_idx": {
            "type": "integer"
          },
          "attrs": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}