{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RoundsStartResponse",
  "type": "object",
  "required": [
    "token",
    "max",
    "question"
  ],
  "properties": {
    "token": {
      "type": "string"
    },
    "max": {
      "type": "integer",
      "minimum": 1
    },
    "question": {
      "type": "object",
      "required": [
        "id",
        "prompt",
        "choices",
        "reveal"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "prompt": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "required": [
              "id",
              "label",
              "isCorrect"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "isCorrect": {
                "type": "boolean"
              }
            },
            "additionalProperties": false
          }
        },
        "reveal": {
          "type": "object",
          "required": [
            "links"
          ],
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "provider",
                  "url"
                ],
                "properties": {
                  "provider": {
                    "type": "string",
                    "enum": [
                      "youtube",
                      "appleMusic"
                    ]
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  },
                  "id": {
                    "type": "string"
                  },
                  "label": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            },
            "embedPreferredProvider": {
              "type": "string"
            }
          },
          "additionalProperties": true
        },
        "artwork": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "width": {
              "type": "integer"
            },
            "height": {
              "type": "integer"
            },
            "alt": {
              "type": "string"
            }
          },
          "additionalProperties": true
        },
        "meta": {
          "type": "object"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}