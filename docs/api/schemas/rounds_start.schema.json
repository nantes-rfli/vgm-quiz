{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://vgm2.dev/schemas/rounds_start.schema.json",
  "title": "Rounds Start Response",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "round",
    "question",
    "finished"
  ],
  "properties": {
    "round": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "token",
        "progress"
      ],
      "properties": {
        "token": {
          "type": "string",
          "minLength": 1
        },
        "progress": {
          "$ref": "#/$defs/Progress"
        },
        "mode": {
          "type": "string",
          "minLength": 1
        },
        "arm": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "question": {
      "$ref": "#/$defs/Question"
    },
    "finished": {
      "type": "boolean"
    }
  },
  "$defs": {
    "Question": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "prompt",
        "choices"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "prompt": {
          "type": "string",
          "minLength": 1
        },
        "choices": {
          "type": "array",
          "minItems": 2,
          "uniqueItems": true,
          "items": {
            "$ref": "#/$defs/Choice"
          }
        },
        "artwork": {
          "$ref": "#/$defs/Artwork"
        },
        "reveal": {
          "$ref": "#/$defs/Reveal"
        },
        "mode": {
          "type": "string",
          "minLength": 1
        },
        "arm": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Choice": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "label"
      ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Artwork": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "url",
        "width",
        "height"
      ],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri-reference"
        },
        "width": {
          "type": "integer",
          "minimum": 1
        },
        "height": {
          "type": "integer",
          "minimum": 1
        },
        "alt": {
          "type": "string"
        }
      }
    },
    "Reveal": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "links": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/RevealLink"
          }
        }
      }
    },
    "RevealLink": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "provider",
        "url"
      ],
      "properties": {
        "provider": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "Progress": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "index",
        "total"
      ],
      "properties": {
        "index": {
          "type": "integer",
          "minimum": 1
        },
        "total": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
